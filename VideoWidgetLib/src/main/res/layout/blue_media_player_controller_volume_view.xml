    <ImageView
        android:id="@+id/iv_volume_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/controller_volume_iv"
        android:src="@drawable/blue_ksy_controller_volume_gesture_selector" />
    
    <ImageView
        android:id="@+id/controller_volume_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_volume_status"
        android:layout_marginBottom="@dimen/volume_margin_bottom"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blue_ksy_volume_up" />

