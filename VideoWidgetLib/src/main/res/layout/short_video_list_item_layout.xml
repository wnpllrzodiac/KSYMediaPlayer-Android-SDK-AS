<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha" />

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon_img"
        android:layout_toRightOf="@+id/icon_img"
        android:layout_marginRight="100dp"
        android:text="info_tv"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_tv"
        android:layout_marginRight="100dp"
        android:layout_toEndOf="@+id/icon_img"
        android:layout_toRightOf="@+id/icon_img"
        android:text="comment_tv"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/fav_title_tv"
        android:layout_marginRight="16dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/short_video_fav_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/fav_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fav_title_tv"
        android:layout_alignStart="@+id/fav_title_tv"
        android:layout_below="@+id/fav_title_tv"
        android:text="Medium Text"
        android:layout_marginRight="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
