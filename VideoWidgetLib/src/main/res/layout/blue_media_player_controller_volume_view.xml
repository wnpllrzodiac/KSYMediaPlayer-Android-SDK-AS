<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/controller_bright_width"
    android:layout_height="@dimen/controller_bright_height"
    android:alpha="0.6"
    android:background="@color/balck">

    <ImageView
        android:id="@+id/controller_volume_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/volume_margin_bottom" 
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blue_ksy_volume_no" />

