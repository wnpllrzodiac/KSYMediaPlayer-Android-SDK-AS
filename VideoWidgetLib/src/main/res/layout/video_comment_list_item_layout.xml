<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/cyan_500"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:layout_marginTop="@dimen/list_item_margin"
            android:src="@drawable/ic_account_circle_grey600_36dp" />

        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:layout_marginRight="100dp"
            android:layout_marginTop="@dimen/list_item_margin"
            android:layout_toEndOf="@+id/icon_img"
            android:layout_toRightOf="@+id/icon_img"
            android:text="user_tv"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_tv"
            android:layout_below="@+id/user_tv"
            android:layout_marginRight="@dimen/list_item_margin"
            android:layout_marginTop="@dimen/list_item_margin"
            android:layout_toEndOf="@+id/icon_img"
            android:layout_toRightOf="@+id/icon_img"
            android:text="comment_tv"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/comment_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:text="Text"
            android:textSize="@dimen/small_text_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>