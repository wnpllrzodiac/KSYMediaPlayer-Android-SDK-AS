<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/live_replay_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/live_replay_head_portrait" />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/live_replay_imageview"
        android:singleLine="true"
        android:text="@string/live_username"
        android:textColor="@color/white"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/tv_movie_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/live_replay_imageview"
        android:layout_below="@+id/tv_movie_name"
        android:singleLine="true"
        android:text="@string/live_comment_content"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>