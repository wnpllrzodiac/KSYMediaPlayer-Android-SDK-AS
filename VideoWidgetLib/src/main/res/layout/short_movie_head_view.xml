<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:player="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ksy.media.widget.ui.shortvideo.ShortVideoMediaPlayerView
        android:id="@+id/player_view_short_movie"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        player:playmode="window" />

    <RelativeLayout
        android:id="@+id/short_video_play_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_view_short_movie"
        android:layout_marginBottom="@dimen/list_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/short_video_watch_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_visibility_grey600_48dp" />

        <TextView
            android:id="@+id/short_video_play_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/short_video_watch_icon"
            android:layout_below="@+id/short_video_watch_icon"
            android:layout_marginTop="4dp"
            android:text="@string/short_video_watch_count_tv_default" />

        <ImageView
            android:id="@+id/short_video_comment_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/short_video_watch_icon"
            android:src="@drawable/ic_message_grey600_48dp" />

        <TextView
            android:id="@+id/short_video_comment_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/short_video_comment_icon"
            android:layout_below="@+id/short_video_comment_icon"
            android:layout_marginTop="4dp"
            android:text="@string/short_video_comment_count_tv_default" />

        <ImageView
            android:id="@+id/short_video_favourate_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/short_video_comment_icon"
            android:src="@drawable/ic_favorite_outline_grey600_48dp" />

        <TextView
            android:id="@+id/short_video_favourate_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/short_video_favourate_icon"
            android:layout_below="@+id/short_video_favourate_icon"
            android:layout_marginTop="4dp"
            android:text="@string/short_video_favourate__tv_default" />

        <ImageView
            android:id="@+id/short_video_share_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/short_video_favourate_icon"
            android:src="@drawable/ic_share_grey600_48dp" />

        <TextView
            android:id="@+id/short_video_share_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/short_video_share_icon"
            android:layout_below="@+id/short_video_share_icon"
            android:layout_marginTop="4dp"
            android:text="@string/short_video_share__tv_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/short_video_time_tv_default" />
    </RelativeLayout>

</RelativeLayout>