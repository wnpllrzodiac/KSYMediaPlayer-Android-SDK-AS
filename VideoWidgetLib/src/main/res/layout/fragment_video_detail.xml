<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ksy.media.widget.ui.video.VideoDetailFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/list_item_margin"
                android:src="@drawable/ic_account_circle_grey600_36dp" />

            <TextView
                android:id="@+id/user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_img"
                android:layout_margin="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_tv" />

            <Button
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/list_item_margin"
                android:text="@string/video_detail_focus" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/video_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/video_detail_title"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/video_detail_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/gray_primary_dark"
        android:layout_margin="@dimen/list_item_large_margin"
        android:text="@string/video_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
